@inherits LayoutComponentBase

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudAppBar Class="white" Style="z-index:3;">
    <MudCarousel Style="height:100%; width: 5%;" Class="ml-10" ShowArrows=false ShowBullets=false AutoCycle=false TData="object" SelectedIndex=index @onmouseenter=@IconMouseOver @onmouseleave=@IconMouseOut>
        <MudCarouselItem Class="d-flex align-center justify-center" Transition=Transition.Fade Color="@Color.Inherit">
            <MudIcon Icon="@Icons.Material.Filled.Circle" Size="@Size.Large" Style="color: darkslategray"/>
        </MudCarouselItem>
        <MudCarouselItem Class="d-flex align-center justify-center" Transition=Transition.Fade Color="@Color.Inherit">
            <MudIcon Icon="@Icons.Material.Filled.Camera" Size="@Size.Large" Style="color: limegreen"/>
        </MudCarouselItem>
    </MudCarousel>
    <MudText Color="Color.Dark" Typo="Typo.h5" Style="font-family: 'Lucida Handwriting'"><b> Andrei Popescu</b></MudText>
    <MudSpacer />
    <CustomButton Text="Home" Path="/"/>
    <CustomButton Text="About" Path="/About"/>
    <CustomButton Text="Work" Path="/Work"/>
</MudAppBar>

<MudLayout Style="z-index:0; margin-bottom:70px;">
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


