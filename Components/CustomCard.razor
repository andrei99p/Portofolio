<MudCard Style="background-color:white;" @onmouseover=ElevationUp @onmouseout=ElevationDown Elevation=@elevation>
    <MudCardHeader>
        <CardHeaderContent>
            @HeaderFragment
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @ChildContent
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public RenderFragment HeaderFragment { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    int elevation = 5;
    private void ElevationUp()
    {
        elevation += 10;
    }
    private void ElevationDown()
    {
        elevation -= 10;
    }
}
